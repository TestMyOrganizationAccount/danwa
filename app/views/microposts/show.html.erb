<h1>投稿詳細ページ</h1>
<h3><%= @micropost.user.name %></h3>
<h3><%= @micropost.content %></h3>

<div class="comment-form">
  <%= form_for([@micropost , @comment]) do |f| %>
    <div class="field">
      <%= f.text_area :body, placeholder: "Send comment..." %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
    <span class="picture">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
  <% end %>

  <script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
      var size_in_megabytes = this.files[0].size/500/500;
      if (size_in_megabytes > 5) {
        alert('Maximum file size is 5MB. Please choose a smaller file.');
      }
    });
  </script>
  </div>

<div class="comment_index">
  <h3>コメント一覧</h3>
  <% @micropost.comments.each do |comment| %>

         <p><%= link_to "#{comment.user.name}" , @user %>: <%= comment.body %>

    <span class= "batu"><%= link_to "削除" , [@micropost,comment] , method: :delete if current_user?(comment.user) %></span></p>

    <hr/>
  <% end %>
</div>
