<div class="user-image">
  <%= image_tag @user.image_name.url, :class => "user-image" %>
</div>
  <p class="myname"><%= @user.name %></p>
  <p class="myname"><%= @user.introduction %></p>
<% if current_user?(@user) %>
  <%= link_to "プロフィールの編集", edit_user_path(current_user) %>
  <%= link_to "アカウント削除", @user, method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %>
<% end %>
